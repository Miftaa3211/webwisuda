<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profil Mahasiswa - Wisuda Polinela</title>
  <link rel="shortcut icon" href="/images/logopolinela.png" type="image/png">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/profile.css">
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-custom">
  <div class="container">
    <a class="navbar-brand" href="/mahasiswa/dashboard">
      <i class="fas fa-graduation-cap me-2"></i>Profil Mahasiswa
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon" style="filter: brightness(0) invert(1);"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <a class="nav-link active" href="/mahasiswa/dashboard">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        <li class="nav-item ms-3">
          <div class="nav-avatar-img"> 
            <% if (mahasiswa.foto_profil) { %>
              <img src="/uploads/profile/<%= mahasiswa.foto_profil %>" alt="Foto Profil">
            <% } else { %>
              <img src="https://ui-avatars.com/api/?name=<%= mahasiswa.nama %>&size=120&background=0047AB&color=fff&bold=true" alt="Avatar">
            <% } %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- MAIN CONTENT -->
<div class="main-content">
  <div class="container">
    <h1 class="page-title">Profil Mahasiswa</h1>
    <p class="page-subtitle">Lihat dan kelola informasi pribadi serta status pendaftaran wisuda Anda.</p>
    
    <div class="row">
      <!-- Profile Card -->
      <div class="col-lg-8">
        <div class="profile-card">
          <div class="profile-header">
            <div class="profile-avatar">
              <% if (mahasiswa.foto_profil) { %>
                <img src="/uploads/profile/<%= mahasiswa.foto_profil %>" alt="Foto Profil">
              <% } else { %>
                <img src="https://ui-avatars.com/api/?name=<%= mahasiswa.nama %>&size=120&background=0047AB&color=fff&bold=true" alt="Avatar">
              <% } %>
            </div>
            <div class="profile-info flex-grow-1">
              <h2><%= mahasiswa.nama %></h2>
              <p class="role">Mahasiswa</p>
              <p class="faculty">Jurusan <%= mahasiswa.jurusan %></p>
            </div>
            <button class="btn-edit-profile" onclick="window.location.href='/mahasiswa/edit-profile'">
              <i class="fas fa-pen me-2"></i>Edit Profil
            </button>
          </div>
          
          <div class="profile-details">
            <div class="detail-row">
              <div class="detail-label">NIM</div>
              <div class="detail-value"><%= mahasiswa.nim %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Program Studi</div>
              <div class="detail-value"><%= mahasiswa.prodi %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Email</div>
              <div class="detail-value"><%= user.email %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">No. HP</div>
              <div class="detail-value"><%= mahasiswa.no_hp || '-' %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Angkatan</div>
              <div class="detail-value"><%= mahasiswa.angkatan || '-' %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">IPK</div>
              <div class="detail-value"><%= mahasiswa.ipk || '-' %></div>
            </div>
            <div class="detail-row">
              <div class="detail-label">Tahun Lulus</div>
              <div class="detail-value"><%= mahasiswa.tahun_lulus || '-' %></div>
            </div>
          </div>
        </div>
        
        <!-- Quick Access -->
        <div class="quick-access">
          <h3>Akses Cepat</h3>
          <div class="access-grid">
            <a href="/mahasiswa/riwayat" class="access-card">
              <i class="fas fa-history"></i>
              <h4>Riwayat Pendaftaran</h4>
              <p>Lihat riwayat pendaftaran wisuda Anda sebelumnya.</p>
            </a>
            <a href="/mahasiswa/upload-berkas" class="access-card">
              <i class="fas fa-file-upload"></i>
              <h4>Upload Berkas</h4>
              <p>Unggah atau perbaharui berkas pendaftaran wisuda Anda.</p>
            </a>
          </div>
        </div>
      </div>
      
      <!-- Status Card -->
      <div class="col-lg-4">
        <div class="status-card">
          <h3>Status Pendaftaran Wisuda</h3>
          
          <% if (pendaftaran) { %>
            <% if (pendaftaran.status === 'Diverifikasi') { %>
              <div class="status-badge">
                <i class="fas fa-check-circle"></i>
                <strong>Terverifikasi</strong>
              </div>
              <p class="status-message">
                Selamat! Pendaftaran wisuda Anda telah diverifikasi oleh fakultas.
              </p>
              <button class="btn-primary-custom" onclick="window.location.href='/mahasiswa/detail-pendaftaran'">
                <i class="fas fa-eye me-2"></i>Lihat Detail Pendaftaran
              </button>
              <button class="btn-secondary-custom" onclick="window.location.href='/mahasiswa/cetak-bukti'">
                <i class="fas fa-download me-2"></i>Unduh Bukti Daftar
              </button>
            <% } else if (pendaftaran.status === 'Diajukan') { %>
              <div class="status-badge pending">
                <i class="fas fa-clock"></i>
                <strong>Menunggu Verifikasi</strong>
              </div>
              <p class="status-message">
                Berkas Anda sedang dalam proses verifikasi. Harap tunggu konfirmasi dari fakultas.
              </p>
              <button class="btn-primary-custom" onclick="window.location.href='/mahasiswa/detail-pendaftaran'">
                <i class="fas fa-eye me-2"></i>Lihat Detail Pendaftaran
              </button>
            <% } else if (pendaftaran.status === 'Ditolak') { %>
              <div class="status-badge rejected">
                <i class="fas fa-times-circle"></i>
                <strong>Ditolak</strong>
              </div>
              <p class="status-message">
                <strong>Catatan dari Admin:</strong><br>
                <%= pendaftaran.catatan || 'Mohon perbaiki dokumen yang ditolak.' %>
              </p>
              <button class="btn-primary-custom" onclick="window.location.href='/mahasiswa/upload-berkas'">
                <i class="fas fa-redo me-2"></i>Unggah Ulang Berkas
              </button>
            <% } %>
          <% } else { %>
            <div class="alert alert-info">
              <i class="fas fa-info-circle me-2"></i>
              Anda belum melakukan pendaftaran wisuda.
            </div>
            <button class="btn-primary-custom" onclick="window.location.href='/mahasiswa/upload-berkas'">
              <i class="fas fa-plus me-2"></i>Daftar Wisuda Sekarang
            </button>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- FOOTER -->
<footer class="footer">
  <p>&copy; 2025 Politeknik Negeri Lampung. All rights reserved.</p>
</footer>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Custom JS for Notifications -->
<script>
  <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
    Swal.fire({
      icon: 'success',
      title: 'Berhasil!',
      text: '<%= success_msg %>',
      confirmButtonColor: '#0047AB'
    });
  <% } %>
  
  <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
    Swal.fire({
      icon: 'error',
      title: 'Error!',
      text: '<%= error_msg %>',
      confirmButtonColor: '#0047AB'
    });
  <% } %>
</script>

</body>
</html>
