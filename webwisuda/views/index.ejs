  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
  
  <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

  <script>
    var swiper = new Swiper(".mySwiper", {
      effect: "coverflow",
      grabCursor: true,
      centeredSlides: true,
      slidesPerView: "auto",
      loop: true, // Agar slide berputar terus (infinity loop)
      
      // Pengaturan Efek Riam (Coverflow)
      coverflowEffect: {
        rotate: 30,    /* Kemiringan kartu */
        stretch: 0,    /* Jarak tarik antar slide */
        depth: 300,    /* Kedalaman efek 3D (semakin besar semakin 'dalam') */
        modifier: 1,   /* Pengali efek */
        slideShadows: true, /* Bayangan antar slide */
      },
      
      // Navigasi Otomatis (Autoplay)
      autoplay: {
        delay: 2500,
        disableOnInteraction: false,
      },
      
      pagination: {
        el: ".swiper-pagination",
        clickable: true,
      },
    });
  </script>

