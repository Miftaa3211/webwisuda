  <style>
    /* Agar slider tidak terlalu mepet */
    .swiper-container-wrapper {
      padding: 40px 0;
      overflow: hidden; /* Mencegah scrollbar horizontal */
    }

    .swiper {
      width: 100%;
      padding-top: 20px;
      padding-bottom: 50px;
    }

    .swiper-slide {
      background-position: center;
      background-size: cover;
      width: 350px; /* Sedikit diperkecil agar efek 'mengalir' lebih terasa */
      height: 450px; /* Format Portrait biasanya lebih estetik untuk riam */
      border-radius: 20px;
      box-shadow: 0 15px 35px rgba(0,0,0,0.3); /* Bayangan lebih lembut */
      /* Efek kaca (Glassmorphism) optional pada border */
      border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .swiper-slide img {
      display: block;
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 20px;
    }

    /* Kustomisasi Pagination (Titik-titik bawah) */
    .swiper-pagination-bullet {
      background: #fff;
      opacity: 0.5;
      width: 10px;
      height: 10px;
    }
    .swiper-pagination-bullet-active {
      background: #0047AB; /* Warna biru Polinela */
      opacity: 1;
      width: 25px; /* Indikator aktif memanjang */
      border-radius: 5px;
      transition: width 0.3s;
    }
  </style>
</head>
