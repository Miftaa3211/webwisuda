  <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content" style="border-radius: 15px; border: none;">
        <div class="modal-header" style="background: linear-gradient(135deg, #0047AB 0%, #0066FF 100%); color: white;">
          <h5 class="modal-title"><i class="fas fa-sign-in-alt me-2"></i>Login Wisuda Online</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body p-4">
          <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
            <div class="alert alert-danger"><%= error_msg %></div>
          <% } %>
          <form action="/auth/login" method="POST">
            <div class="mb-3">
              <label class="form-label">Email</label>
              <input type="email" name="email" class="form-control" required>
            </div>
            <div class="mb-3">
              <label class="form-label">Password</label>
              <input type="password" name="password" class="form-control" required>
            </div>
            <button type="submit" class="btn w-100" style="background: #0047AB; color: white;">Masuk</button>
          </form>
        </div>
      </div>
    </div>
