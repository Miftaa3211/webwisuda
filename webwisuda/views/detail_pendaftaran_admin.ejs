<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Wisuda Polinela</title>
  <link rel="shortcut icon" href="/images/logopolinela.png" type="image/png">
  
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <link rel="stylesheet" href="/css/detail-admin.css"> 
  </head>
<body>

<nav class="navbar navbar-expand-lg navbar-admin">
  <div class="container">
    <a class="navbar-brand" href="/admin/monitoring">
      <i class="fas fa-user-shield me-2"></i>Dashboard Admin
    </a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item"><a class="nav-link" href="/admin/monitoring">Dashboard</a></li>
        <li class="nav-item"><div class="user-avatar">A</div></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container pb-5">
  <div class="page-header">
    <div>
      <div class="breadcrumb-custom">Semua Pendaftar / Detail Pendaftaran</div>
      <h1 class="applicant-name"><%= pendaftaran.nama %></h1>
    </div>
    
    <a href="/admin/cetak-detail/<%= pendaftaran.id %>" target="_blank" class="btn btn-danger px-4 py-2" style="background: #DC2626; border:none; font-weight:500;">
      <i class="fas fa-file-pdf me-2"></i>Export PDF
    </a>
  </div>

  <div class="row">
    <div class="col-md-4">
      <div class="card-custom">
        <h5 class="card-title-custom">Status Pendaftaran</h5>
        
        <% 
          let statusClass = 'bg-status-menunggu';
          if(pendaftaran.status === 'Diverifikasi') statusClass = 'bg-status-diverifikasi';
          if(pendaftaran.status === 'Ditolak') statusClass = 'bg-status-ditolak';
        %>
        <div class="status-badge-large <%= statusClass %>">
          <i class="fas fa-hourglass-half me-2"></i><%= pendaftaran.status %>
        </div>

        <h5 class="card-title-custom mt-4">Detail Pendaftar</h5>
        
        <div class="detail-item">
          <div class="detail-label">NIM</div>
          <div class="detail-value"><%= pendaftaran.nim %></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Program Studi</div>
          <div class="detail-value"><%= pendaftaran.prodi %></div>
        </div>
        
        <div class="detail-item">
          <div class="detail-label">Jurusan</div>
          <div class="detail-value"><%= pendaftaran.jurusan %></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">Email</div>
          <div class="detail-value email"><%= pendaftaran.user_email || '-' %></div>
        </div>

        <div class="detail-item">
          <div class="detail-label">No HP</div>
          <div class="detail-value"><%= pendaftaran.no_hp %></div>
        </div>

        <div class="btn-action-group">
          <button type="button" class="btn-terima" onclick="openModal('Diverifikasi')">Terima</button>
          <button type="button" class="btn-tolak" onclick="openModal('Ditolak')">Tolak</button>
        </div>
        
        <button type="button" class="btn btn-dark w-100 mt-3 py-2 fw-bold" style="border-radius: 8px;" onclick="openModal('<%= pendaftaran.status %>')">
          Edit Status
        </button>
      </div>
    </div>

    <div class="col-md-8">
      <div class="card-custom">
        <h5 class="card-title-custom">Berkas Persyaratan</h5>

        <% if(dokumen.length === 0) { %>
          <p class="text-muted text-center py-4">Belum ada dokumen yang diunggah.</p>
        <% } %>

        <% dokumen.forEach(d => { %>
          <div class="doc-item">
            <div class="doc-info">
              <span class="doc-name"><%= d.jenis_dokumen.replace(/_/g, ' ') %></span>
              <span class="doc-date">Diunggah: <%= new Date(d.uploaded_at).toLocaleDateString('id-ID') %></span>
            </div>
            
            <div class="doc-actions">
              <% if(d.status === 'Lengkap' || d.status === 'Diterima') { %>
                <span class="badge-doc diterima">Diterima</span>
              <% } else if(d.status === 'Ditolak') { %>
                <span class="badge-doc ditolak">Ditolak</span>
              <% } else { %>
                <span class="badge-doc menunggu">Menunggu</span>
              <% } %>

              <a href="/uploads/<%= d.path_file %>" target="_blank" class="btn-icon btn-view" title="Lihat Dokumen">
                <i class="fas fa-eye"></i>
              </a>

              <button type="button" class="btn-icon" style="background:#FEE2E2; color:#991B1B;" 
                      title="Tolak Dokumen" onclick="tolakDokumen('<%= d.id %>', '<%= d.jenis_dokumen %>')">
                  <i class="fas fa-times"></i>
              </button>

              <form action="/admin/update-dokumen/<%= d.id %>" method="POST" style="display:inline;">
                <input type="hidden" name="status" value="Lengkap">
                <button type="submit" class="btn-icon" style="background:#D1FAE5; color:#065F46;" title="Terima">
                  <i class="fas fa-check"></i>
                </button>
              </form>
            </div>

            <% if(d.status === 'Ditolak') { %>
              <div class="reject-box">
                <div class="reject-title">Catatan Penolakan:</div>
                <p class="reject-text"><%= d.catatan || 'Dokumen tidak valid.' %></p>
              </div>
            <% } %>
          </div>
        <% }) %>

      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="updateStatusModal" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title fw-bold">Update Status Pendaftaran</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form action="/admin/update-status/<%= pendaftaran.id %>" method="POST">
        <div class="modal-body">
          <div class="mb-4">
            <label class="form-label fw-bold">Status</label>
            <select class="form-select" name="status" id="modalStatusInput">
              <option value="Menunggu">Menunggu Verifikasi</option>
              <option value="Diverifikasi">Diverifikasi (Terima)</option>
              <option value="Ditolak">Ditolak</option>
            </select>
          </div>
          <div class="mb-3">
            <label class="form-label fw-bold">Keterangan</label>
            <textarea class="form-control" name="catatan" rows="4" placeholder="Keterangan akan dilihat oleh mahasiswa..." style="background:#1F2937; color:white;"><%= pendaftaran.catatan %></textarea>
            <small class="text-muted">Keterangan opsional untuk mahasiswa</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary w-50" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary w-50" style="background: #0047AB;">Update Status</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  // Handle Modal Trigger
  function openModal(status) {
    const modal = new bootstrap.Modal(document.getElementById('updateStatusModal'));
    const select = document.getElementById('modalStatusInput');
    if(status) select.value = status;
    modal.show();
  }

  // Fungsi Tolak Dokumen dengan Input Alasan
  function tolakDokumen(id, namaDokumen) {
    Swal.fire({
      title: 'Tolak Dokumen?',
      text: `Masukkan alasan penolakan untuk ${namaDokumen}:`,
      input: 'text',
      inputPlaceholder: 'Contoh: Gambar buram / Scan terpotong',
      icon: 'warning',
      showCancelButton: true,
      confirmButtonColor: '#DC2626',
      cancelButtonColor: '#6B7280',
      confirmButtonText: 'Ya, Tolak',
      cancelButtonText: 'Batal',
      inputValidator: (value) => {
        if (!value) {
          return 'Anda harus menuliskan alasan penolakan!';
        }
      }
    }).then((result) => {
      if (result.isConfirmed) {
        // Submit form dinamis
        const form = document.createElement('form');
        form.method = 'POST';
        form.action = `/admin/update-dokumen/${id}`;

        const inputStatus = document.createElement('input');
        inputStatus.type = 'hidden';
        inputStatus.name = 'status';
        inputStatus.value = 'Ditolak';

        const inputCatatan = document.createElement('input');
        inputCatatan.type = 'hidden';
        inputCatatan.name = 'catatan';
        inputCatatan.value = result.value;

        form.appendChild(inputStatus);
        form.appendChild(inputCatatan);
        document.body.appendChild(form);
        form.submit();
      }
    });
  }

  // Flash Messages
  <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
    Swal.fire({ icon: 'success', title: 'Berhasil', text: '<%= success_msg %>', confirmButtonColor: '#0047AB' });
  <% } %>

  <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
    Swal.fire({ icon: 'error', title: 'Gagal', text: '<%= error_msg %>', confirmButtonColor: '#DC2626' });
  <% } %>
</script>

</body>
</html>
