<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Wisuda Polinela</title>
  <link rel="shortcut icon" href="/images/logopolinela.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/admin-monitoring.css">
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-admin">
  <div class="container">
    <a class="navbar-brand" href="/admin/monitoring">
      <i class="fas fa-user-shield me-2"></i>Admin Panel
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon" style="filter: brightness(0) invert(1);"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item"><a class="nav-link" href="/admin/monitoring">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/pengaturan">Pengaturan</a></li>
        <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
        <li class="nav-item ms-3"><div class="user-avatar">A</div></li>
      </ul>
    </div>
  </div>
</nav>

<div class="main-content">
  <div class="container">
    <h1 class="page-title">Pengaturan Sistem Wisuda</h1>
    
    <div class="row justify-content-center">
      <div class="col-lg-10">
        
        <div class="card border-0 shadow-sm" style="border-radius: 15px; overflow: hidden;">
          <div class="card-body p-4">
            
            <h5 class="fw-bold text-primary mb-3">
              <i class="fas fa-sliders-h me-2"></i>Pengaturan Umum
            </h5>

            <form id="mainSettingsForm" action="/admin/pengaturan/update" method="POST">
              <div class="row mb-3">
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Nama Periode</label>
                  <input type="text" name="periode_wisuda" class="form-control" 
                         value="<%= setting.periode_wisuda %>" placeholder="Contoh: Periode September 2025">
                </div>
                <div class="col-md-6">
                  <label class="form-label fw-semibold">Lokasi Wisuda</label>
                  <input type="text" name="lokasi" class="form-control" value="<%= setting.lokasi %>">
                </div>
              </div>

              <div class="card bg-light border-0 mb-2">
                <div class="card-body">
                  <label class="form-label fw-bold text-secondary small text-uppercase">Pesan Informasi Dashboard</label>
                  <textarea name="pesan_info" class="form-control" rows="2" 
                    placeholder="Pesan ini akan muncul di dashboard mahasiswa..."><%= setting.pesan_info || '' %></textarea>
                </div>
              </div>
              </form> 
            
            <hr class="my-5 border-2">

            <div class="d-flex justify-content-between align-items-center mb-4">
              <div>
                <h5 class="fw-bold text-primary mb-1">
                  <i class="fas fa-layer-group me-2"></i>Manajemen Kloter & Jadwal
                </h5>
                <p class="text-muted small mb-0">Atur tanggal pelaksanaan dan <strong>masa pendaftaran</strong> per kloter.</p>
              </div>
              <button class="btn btn-sm btn-primary rounded-pill px-3" data-bs-toggle="modal" data-bs-target="#modalAddKloter">
                <i class="fas fa-plus me-1"></i> Tambah Kloter
              </button>
            </div>

            <div class="row" id="kloterContainer">
              <% if (typeof kloters !== 'undefined' && kloters.length > 0) { %>
                <% kloters.forEach(k => { %>
                  <div class="col-md-6 mb-3">
                    <div class="card h-100 border <%= k.is_active ? 'border-primary' : 'border-light bg-light' %>">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start">
                          <div>
                            <h6 class="fw-bold mb-1"><%= k.nama_kloter %></h6>
                            <div class="badge bg-light text-dark border mb-2">
                              Wisuda: <%= k.tanggal_wisuda ? new Date(k.tanggal_wisuda).toLocaleDateString('id-ID') : '-' %>
                            </div>
                          </div>
                          
                          <% if (!k.is_active) { %>
                            <span class="badge bg-secondary">Non-Aktif</span>
                          <% } else if (k.terisi >= k.kuota_maksimal) { %>
                            <span class="badge bg-danger">Penuh</span>
                          <% } else { %>
                            <span class="badge bg-success">Buka</span>
                          <% } %>
                        </div>

                        <div class="mt-2 p-2 bg-light rounded border small">
                            <strong>Masa Pendaftaran:</strong><br>
                            <span class="text-success"><i class="fas fa-play me-1"></i><%= k.tanggal_buka ? new Date(k.tanggal_buka).toLocaleDateString('id-ID') : '?' %></span>
                            <span class="mx-1">-</span>
                            <span class="text-danger"><i class="fas fa-stop me-1"></i><%= k.tanggal_tutup ? new Date(k.tanggal_tutup).toLocaleDateString('id-ID') : '?' %></span>
                        </div>

                        <div class="mt-3">
                          <div class="d-flex justify-content-between small text-muted mb-1">
                            <span>Kuota Terisi</span>
                            <span><%= k.terisi %> / <%= k.kuota_maksimal %></span>
                          </div>
                          <div class="progress" style="height: 6px;">
                            <% let percent = (k.terisi / k.kuota_maksimal) * 100 %>
                            <div class="progress-bar <%= k.is_active ? 'bg-primary' : 'bg-secondary' %>" style="width: <%= percent %>%"></div>
                          </div>
                        </div>
                      </div>
                      
                      <div class="card-footer bg-white border-0 pt-0 d-flex gap-2">
                        <button class="btn btn-sm btn-outline-primary flex-grow-1" data-bs-toggle="modal" data-bs-target="#modalEditKloter<%= k.id %>">
                          <i class="fas fa-edit"></i> Edit Jadwal
                        </button>
                      </div>
                    </div>
                  </div>

                  <div class="modal fade" id="modalEditKloter<%= k.id %>" tabindex="-1">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <form action="/admin/kloter/update" method="POST">
                          <div class="modal-header">
                            <h5 class="modal-title">Edit Kloter</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                          </div>
                          <div class="modal-body">
                            <input type="hidden" name="id" value="<%= k.id %>">
                            
                            <div class="mb-3">
                              <label>Nama Kloter</label>
                              <input type="text" name="nama_kloter" class="form-control" value="<%= k.nama_kloter %>" required>
                            </div>
                            
                            <div class="mb-3">
                               <label class="text-success fw-bold">Tanggal Pelaksanaan Wisuda</label>
                               <input type="date" name="tanggal_wisuda" class="form-control border-success" value="<%= k.tanggal_fmt %>" required>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <label class="small fw-bold">Buka Pendaftaran</label>
                                    <input type="date" name="tanggal_buka" class="form-control" value="<%= k.buka_fmt %>" required>
                                </div>
                                <div class="col-6">
                                    <label class="small fw-bold">Tutup Pendaftaran</label>
                                    <input type="date" name="tanggal_tutup" class="form-control" value="<%= k.tutup_fmt %>" required>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-6">
                                    <label>Kuota</label>
                                    <input type="number" name="kuota_maksimal" class="form-control" value="<%= k.kuota_maksimal %>" required>
                                </div>
                                <div class="col-6">
                                    <label>Status</label>
                                    <div class="form-check form-switch mt-2">
                                        <input class="form-check-input" type="checkbox" name="is_active" <%= k.is_active ? 'checked' : '' %>>
                                        <label class="form-check-label">Aktif</label>
                                    </div>
                                </div>
                            </div>
                          </div>
                          <div class="modal-footer">
                             <button type="submit" class="btn btn-primary">Simpan</button>
                          </div>
                        </form>
                      </div>
                    </div>
                  </div>
                  <% }) %>
              <% } else { %>
                <div class="col-12 text-center py-5 bg-light rounded">
                  <p class="text-muted mb-0">Belum ada jadwal kloter. Silakan tambah kloter.</p>
                </div>
              <% } %>
            </div>

          </div> 
          <div class="card-footer bg-light p-4 text-end">
            <button type="submit" form="mainSettingsForm" class="btn btn-primary btn-lg fw-bold px-5" style="background-color: #0047AB;">
              <i class="fas fa-save me-2"></i>Simpan Pengaturan
            </button>
          </div>

        </div> 
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalAddKloter" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/kloter/add" method="POST">
        <div class="modal-header">
          <h5 class="modal-title fw-bold">Tambah Kloter Baru</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label>Nama Kloter</label>
            <input type="text" name="nama_kloter" class="form-control" placeholder="Contoh: Gelombang 1" required>
          </div>
          <div class="mb-3">
             <label class="text-success fw-bold">Tanggal Pelaksanaan</label>
             <input type="date" name="tanggal_wisuda" class="form-control border-success" required>
          </div>
          
          <div class="row mb-3">
                <div class="col-6">
                    <label class="small fw-bold">Buka Pendaftaran</label>
                    <input type="date" name="tanggal_buka" class="form-control" required>
                </div>
                <div class="col-6">
                    <label class="small fw-bold">Tutup Pendaftaran</label>
                    <input type="date" name="tanggal_tutup" class="form-control" required>
                </div>
          </div>

          <div class="row">
            <div class="col-6 mb-3">
              <label>Kuota</label>
              <input type="number" name="kuota_maksimal" class="form-control" placeholder="200" required>
            </div>
            <div class="col-6 mb-3">
              <label>Urutan</label>
              <input type="number" name="urutan" class="form-control" value="1" required>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Simpan Kloter</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
  <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
    Swal.fire({ icon: 'success', title: 'Berhasil!', text: '<%= success_msg %>', confirmButtonColor: '#0047AB' });
  <% } %>
  <% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
    Swal.fire({ icon: 'error', title: 'Gagal!', text: '<%= error_msg %>', confirmButtonColor: '#0047AB' });
  <% } %>
</script>

</body>
</html>