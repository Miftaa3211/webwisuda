<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kelola Periode - Admin Wisuda</title>
  <link rel="shortcut icon" href="/images/logopolinela.png" type="image/png">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <style>
    body { background-color: #f4f6f9; font-family: 'Poppins', sans-serif; }
    .navbar-admin { background: linear-gradient(135deg, #003399 0%, #0047AB 100%); padding: 15px 0; }
    .navbar-admin .navbar-brand { color: white; font-weight: 700; font-size: 1.2rem; }
    .navbar-admin .nav-link { color: rgba(255,255,255,0.8); transition: 0.3s; }
    .navbar-admin .nav-link:hover, .navbar-admin .nav-link.active { color: white; }
    .main-content { padding: 40px 0; }
    .card-periode { border: none; border-radius: 15px; box-shadow: 0 5px 20px rgba(0,0,0,0.05); overflow: hidden; }
    .table-custom th { background-color: #0047AB; color: white; font-weight: 500; border: none; padding: 15px; }
    .table-custom td { vertical-align: middle; padding: 15px; }
  </style>
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-admin">
  <div class="container">
    <a class="navbar-brand" href="/admin/monitoring">
      <i class="fas fa-user-shield me-2"></i> Admin Panel
    </a>
    <div class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item"><a class="nav-link" href="/admin/monitoring">Dashboard</a></li>
        <li class="nav-item"><a class="nav-link active" href="/admin/periode">Periode & Kuota</a></li>
        <li class="nav-item"><a class="nav-link" href="/auth/logout">Logout</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="main-content">
  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold text-dark"><i class="fas fa-calendar-check me-2"></i>Manajemen Periode Wisuda</h2>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalTambah">
        <i class="fas fa-plus me-2"></i>Buka Periode Baru
      </button>
    </div>

    <% if (msg.length > 0) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% } %>
    <% if (error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="card card-periode">
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-striped table-hover table-custom mb-0">
            <thead>
              <tr>
                <th>Status</th>
                <th>Nama Periode</th>
                <th>Jadwal Pendaftaran</th>
                <th class="text-center">Kuota (Slot)</th>
                <th class="text-center">Terisi</th>
                <th class="text-center">Sisa</th>
                <th class="text-center">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (periode.length === 0) { %>
                <tr><td colspan="7" class="text-center py-4">Belum ada periode wisuda yang dibuat.</td></tr>
              <% } %>

              <% periode.forEach(p => { %>
                <tr class="<%= p.is_active ? 'table-primary' : '' %>">
                  <td>
                    <% if (p.is_active) { %>
                      <span class="badge bg-success">AKTIF</span>
                    <% } else { %>
                      <span class="badge bg-secondary">TUTUP</span>
                    <% } %>
                  </td>
                  <td class="fw-bold"><%= p.nama_periode %></td>
                  <td>
                    <small class="d-block text-muted">Buka: <%= new Date(p.tanggal_buka).toLocaleDateString('id-ID') %></small>
                    <small class="d-block text-danger">Tutup: <%= new Date(p.tanggal_tutup).toLocaleDateString('id-ID') %></small>
                  </td>
                  <td class="text-center fw-bold"><%= p.kuota %></td>
                  <td class="text-center text-primary fw-bold"><%= p.terisi %></td>
                  <td class="text-center">
                    <span class="badge bg-<%= (p.kuota - p.terisi) < 10 ? 'danger' : 'info' %>">
                      <%= p.kuota - p.terisi %>
                    </span>
                  </td>
                  <td class="text-center">
                    <% if (!p.is_active) { %>
                      <a href="/admin/periode/aktifkan/<%= p.id %>" class="btn btn-sm btn-outline-success" title="Aktifkan">
                        <i class="fas fa-power-off"></i>
                      </a>
                    <% } %>
                    
                    <button class="btn btn-sm btn-outline-warning" data-bs-toggle="modal" data-bs-target="#modalEdit<%= p.id %>">
                      <i class="fas fa-edit"></i>
                    </button>

                    <% if (p.terisi === 0) { %>
                      <a href="/admin/periode/hapus/<%= p.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hapus periode ini?')">
                        <i class="fas fa-trash"></i>
                      </a>
                    <% } %>
                  </td>
                </tr>

                <div class="modal fade" id="modalEdit<%= p.id %>" tabindex="-1">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <form action="/admin/periode/update" method="POST">
                        <div class="modal-header">
                          <h5 class="modal-title">Edit Periode</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          <input type="hidden" name="id" value="<%= p.id %>">
                          <div class="mb-3">
                            <label>Nama Periode</label>
                            <input type="text" name="nama_periode" class="form-control" value="<%= p.nama_periode %>" required>
                          </div>
                          <div class="row">
                            <div class="col-6 mb-3">
                              <label>Tgl Buka</label>
                              <input type="date" name="tanggal_buka" class="form-control" value="<%= new Date(p.tanggal_buka).toISOString().split('T')[0] %>" required>
                            </div>
                            <div class="col-6 mb-3">
                              <label>Tgl Tutup</label>
                              <input type="date" name="tanggal_tutup" class="form-control" value="<%= new Date(p.tanggal_tutup).toISOString().split('T')[0] %>" required>
                            </div>
                          </div>
                          <div class="mb-3">
                            <label>Kuota</label>
                            <input type="number" name="kuota" class="form-control" value="<%= p.kuota %>" min="<%= p.terisi %>" required>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                          <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modalTambah" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <form action="/admin/periode/add" method="POST">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Tambah Periode Baru</h5>
          <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label>Nama Periode</label>
            <input type="text" name="nama_periode" class="form-control" placeholder="Contoh: Wisuda September 2026" required>
          </div>
          <div class="row">
            <div class="col-6 mb-3">
              <label>Tgl Buka</label>
              <input type="date" name="tanggal_buka" class="form-control" required>
            </div>
            <div class="col-6 mb-3">
              <label>Tgl Tutup</label>
              <input type="date" name="tanggal_tutup" class="form-control" required>
            </div>
          </div>
          <div class="mb-3">
            <label>Kuota (Slot)</label>
            <input type="number" name="kuota" class="form-control" placeholder="500" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
          <button type="submit" class="btn btn-primary">Simpan</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
