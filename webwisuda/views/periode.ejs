<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <title>Kelola Periode Wisuda</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
</head>
<body class="bg-light">

  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand" href="/admin/dashboard">Admin Panel</a>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/admin/dashboard">Dashboard</a>
        <a class="nav-link active" href="/admin/periode">Periode & Kuota</a>
        <a class="nav-link" href="/auth/logout">Logout</a>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3><i class="fas fa-calendar-alt me-2"></i>Manajemen Periode & Kuota</h3>
      <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalTambah">
        <i class="fas fa-plus me-2"></i>Buka Periode Baru
      </button>
    </div>

    <% if (msg.length > 0) { %>
      <div class="alert alert-success"><%= msg %></div>
    <% } %>
    <% if (error.length > 0) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover align-middle">
            <thead class="table-light">
              <tr>
                <th>Status</th>
                <th>Nama Periode</th>
                <th>Jadwal Pendaftaran</th>
                <th>Kuota</th>
                <th>Terisi</th>
                <th>Sisa</th>
                <th>Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (periode.length === 0) { %>
                <tr><td colspan="7" class="text-center">Belum ada data periode.</td></tr>
              <% } %>

              <% periode.forEach(p => { %>
                <tr class="<%= p.is_active ? 'table-primary' : '' %>">
                  <td>
                    <% if (p.is_active) { %>
                      <span class="badge bg-success">AKTIF</span>
                    <% } else { %>
                      <span class="badge bg-secondary">TUTUP</span>
                    <% } %>
                  </td>
                  <td class="fw-bold"><%= p.nama_periode %></td>
                  <td>
                    <small>
                      <%= new Date(p.tanggal_buka).toLocaleDateString('id-ID') %> s/d 
                      <%= new Date(p.tanggal_tutup).toLocaleDateString('id-ID') %>
                    </small>
                  </td>
                  <td><%= p.kuota %></td>
                  <td><%= p.terisi %></td>
                  <td>
                    <span class="fw-bold text-<%= (p.kuota - p.terisi) < 10 ? 'danger' : 'success' %>">
                      <%= p.kuota - p.terisi %>
                    </span>
                  </td>
                  <td>
                    <% if (!p.is_active) { %>
                      <a href="/admin/periode/aktifkan/<%= p.id %>" class="btn btn-sm btn-outline-success" title="Aktifkan">
                        <i class="fas fa-power-off"></i>
                      </a>
                    <% } %>
                    
                    <button class="btn btn-sm btn-outline-warning" 
                            data-bs-toggle="modal" 
                            data-bs-target="#modalEdit<%= p.id %>">
                      <i class="fas fa-edit"></i>
                    </button>

                    <% if (p.terisi === 0) { %>
                      <a href="/admin/periode/hapus/<%= p.id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Hapus periode ini?')">
                        <i class="fas fa-trash"></i>
                      </a>
                    <% } %>
                  </td>
                </tr>

                <div class="modal fade" id="modalEdit<%= p.id %>" tabindex="-1">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <form action="/admin/periode/update" method="POST">
                        <div class="modal-header">
                          <h5 class="modal-title">Edit Periode</h5>
                          <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                          <input type="hidden" name="id" value="<%= p.id %>">
                          <div class="mb-3">
                            <label>Nama Periode</label>
                            <input type="text" name="nama_periode" class="form-control" value="<%= p.nama_periode %>" required>
                          </div>
                          <div class="row">
                            <div class="col-6 mb-3">
                              <label>Tgl Buka</label>
                              <% const tglBuka = new Date(p.tanggal_buka).toISOString().split('T')[0]; %>
                              <input type="date" name="tanggal_buka" class="form-control" value="<%= tglBuka %>" required>
                            </div>
                            <div class="col-6 mb-3">
                              <label>Tgl Tutup</label>
                              <% const tglTutup = new Date(p.tanggal_tutup).toISOString().split('T')[0]; %>
                              <input type="date" name="tanggal_tutup" class="form-control" value="<%= tglTutup %>" required>
                            </div>
                          </div>
                          <div class="mb-3">
                            <label>Kuota</label>
                            <input type="number" name="kuota" class="form-control" value="<%= p.kuota %>" min="<%= p.terisi %>" required>
                          </div>
                        </div>
                        <div class="modal-footer">
                          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                          <button type="submit" class="btn btn-primary">Simpan</button>
                        </div>
                      </form>
                    </div>
                  </div>
                </div>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="modalTambah" tabindex="-1">
    <div class="modal-dialog">
      <div class="modal-content">
        <form action="/admin/periode/add" method="POST">
          <div class="modal-header">
            <h5 class="modal-title">Tambah Periode</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
          <div class="modal-body">
            <div class="mb-3">
              <label>Nama Periode</label>
              <input type="text" name="nama_periode" class="form-control" required>
            </div>
            <div class="row">
              <div class="col-6 mb-3">
                <label>Tgl Buka</label>
                <input type="date" name="tanggal_buka" class="form-control" required>
              </div>
              <div class="col-6 mb-3">
                <label>Tgl Tutup</label>
                <input type="date" name="tanggal_tutup" class="form-control" required>
              </div>
            </div>
            <div class="mb-3">
              <label>Kuota</label>
              <input type="number" name="kuota" class="form-control" required>
            </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
            <button type="submit" class="btn btn-primary">Simpan</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
