  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-4 border-0 shadow-lg">
      <div class="modal-header bg-primary text-white border-0">
        <h5 class="modal-title fw-bold"><i class="fas fa-key me-2"></i>Reset Password</h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
      </div>
      <div class="modal-body p-4">
        <div id="forgotAlert" class="alert d-none"></div>
        <form id="forgotForm">
          <div class="mb-3">
            <label class="fw-semibold small mb-2">Email Terdaftar</label>
            <input type="email" name="email" class="form-control" placeholder="email@polinela.ac.id" required>
          </div>
          <button class="btn btn-primary w-100 rounded-3">Kirim Link Reset</button>
        </form>
      </div>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
// === SCRIPT CROSS-FADE VIDEO PLAYER (SMOOTH TRANSITION) ===
document.addEventListener('DOMContentLoaded', function() {
  const playlist = [
    "/images/Animasi_Wisuda_Gaya_Melempar_Toga.mp4",
    "/images/Permintaan_Video_Wisuda_Dramatis.mp4"
  ];

  let currentIdx = 0;
  
  // Dua player untuk teknik double buffering
  const player1 = document.getElementById('player1');
  const player2 = document.getElementById('player2');
  
  // Inisialisasi awal
  player1.src = playlist[0];
  player2.src = playlist[1]; // Preload video kedua
  
  player1.play().catch(e => console.log("Autoplay blocked", e));
  
  // Fungsi Swap Player
  function swapPlayers(activePlayer, hiddenPlayer, nextIndex) {
    // 1. Putar video yang tersembunyi
    hiddenPlayer.play().then(() => {
      // 2. Lakukan Cross-Fade (Tukar class active)
      hiddenPlayer.classList.add('active');
      activePlayer.classList.remove('active');
      
      // 3. Siapkan video selanjutnya di player yang barusan selesai (untuk putaran berikutnya)
      // Kita beri sedikit delay agar transisi CSS selesai dulu sebelum ganti src
      setTimeout(() => {
         activePlayer.pause();
         activePlayer.currentTime = 0;
         activePlayer.src = playlist[nextIndex];
         activePlayer.load(); // Paksa browser download buffer baru
      }, 1500); // Sesuaikan dengan durasi transition CSS (1.5s)
      
    }).catch(e => console.error("Play error", e));
  }

  // Event Listener saat Video 1 Selesai
  player1.addEventListener('ended', () => {
    // Hitung index video berikutnya untuk dipreload ke player1 nanti
    currentIdx = (currentIdx + 1) % playlist.length; // Naik ke index 1
    const nextNextIdx = (currentIdx + 1) % playlist.length; // Index 0 (untuk preload)
    
    // Player 1 selesai -> Aktifkan Player 2 -> Siapkan Player 1 dengan video index 0
    swapPlayers(player1, player2, nextNextIdx);
  });

  // Event Listener saat Video 2 Selesai
  player2.addEventListener('ended', () => {
    currentIdx = (currentIdx + 1) % playlist.length; // Naik ke index 0 (Loop)
    const nextNextIdx = (currentIdx + 1) % playlist.length; // Index 1 (untuk preload)
    
    // Player 2 selesai -> Aktifkan Player 1 -> Siapkan Player 2 dengan video index 1
    swapPlayers(player2, player1, nextNextIdx);
  });
});

// === LOGIKA LOGIN ===
const form = document.getElementById('loginForm');
const alertBox = document.getElementById('loginAlert');

form.addEventListener('submit', async e => {
  e.preventDefault();
  alertBox.className = 'alert d-none';
  const btn = form.querySelector('button');
  const originalContent = btn.innerHTML;
  btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Memproses...';
  btn.disabled = true;

  const formData = new FormData(form);
  const data = new URLSearchParams(formData);

  try {
    const res = await fetch('/auth/login', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: data 
    });
    const result = await res.json();
    if (!result.success) throw new Error(result.message);
    window.location.href = result.redirect;
  } catch (error) {
    alertBox.className = 'alert alert-danger';
    alertBox.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i> ${error.message || 'Terjadi kesalahan.'}`;
    form.classList.add('shake');
    setTimeout(() => form.classList.remove('shake'), 500);
  } finally {
    btn.innerHTML = originalContent;
    btn.disabled = false;
  }
});

// === LOGIKA LUPA PASSWORD ===
document.getElementById('forgotForm').addEventListener('submit', async e => {
  e.preventDefault();
  const alert = document.getElementById('forgotAlert');
  alert.className = 'alert alert-info';
  alert.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengirim email...';
  const formData = new FormData(e.target);
  const data = new URLSearchParams(formData);
  try {
    const res = await fetch('/auth/forgot-password', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: data
    });
    const result = await res.json();
    if (result.success) {
        alert.className = 'alert alert-success';
        alert.innerHTML = `<i class="fas fa-check-circle me-2"></i> ${result.message}`;
    } else {
        alert.className = 'alert alert-danger';
        alert.innerHTML = `<i class="fas fa-exclamation-circle me-2"></i> ${result.message}`;
    }
  } catch (error) {
    alert.className = 'alert alert-danger';
    alert.innerHTML = `<i class="fas fa-times-circle"></i> Gagal terhubung ke server.`;
  }
});
</script>

