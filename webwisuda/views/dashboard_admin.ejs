<!DOCTYPE html>
<html lang="id">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Wisuda Polinela</title>
  <link rel="shortcut icon" href="/images/logopolinela.png" type="image/png">
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  
  <!-- Font Awesome -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
  
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  
  <!-- DataTables CSS -->
  <link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet">
  
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/admin-monitoring.css">
</head>
<body>

<!-- NAVBAR -->
<nav class="navbar navbar-expand-lg navbar-admin">
  <div class="container">
    <a class="navbar-brand" href="/admin/monitoring">
      <i class="fas fa-user-shield me-2"></i>Dashboard Admin
    </a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon" style="filter: brightness(0) invert(1);"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto align-items-center">
        <li class="nav-item">
          <a class="nav-link active" href="/admin/monitoring">Dashboard</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/auth/logout">Logout</a>
        </li>
        <li class="nav-item ms-3">
          <div class="user-avatar">
            A
          </div>
        </li>
      </ul>
    </div>
  </div>
</nav>

<!-- MAIN CONTENT -->
<div class="main-content">
  <div class="container">
    <h1 class="page-title">Monitoring Pendaftaran Mahasiswa</h1>
    
    <div class="monitoring-card">
      <!-- Search & Actions -->
      <div class="search-actions">
        <div class="search-box">
          <i class="fas fa-search"></i>
          <input type="text" id="searchTable" placeholder="Cari nama atau NIM...">
        </div>
        <div class="action-buttons">
          <button class="btn-filter" id="btnFilter">
            <i class="fas fa-filter"></i>
            Filter
          </button>
          <a href="/admin/export" class="btn-export">
            <i class="fas fa-download"></i>
            Export
          </a>
        </div>
      </div>

      <!-- Table -->
      <div class="table-responsive">
        <table id="monitoringTable" class="table table-hover table-custom">
          <thead>
            <tr>
              <th>Nama Mahasiswa</th>
              <th>NIM</th>
              <th>Program Studi</th>
              <th>Status Berkas</th>
              <th>Status Verifikasi</th>
              <th>TGL Daftar</th>
              <th>Aksi</th>
            </tr>
          </thead>
          <tbody>
            <% pendaftaran.forEach(p => { %>
            <tr>
              <td>
                <a href="/admin/detail/<%= p.id %>" class="nama-link">
                  <%= p.nama %>
                </a>
              </td>
              <td><%= p.nim %></td>
              <td><%= p.prodi %></td>
              <td>
                <span class="status-badge <%= p.status_berkas === 'Lengkap' ? 'status-lengkap' : 'status-belum' %>">
                  <%= p.status_berkas %>
                </span>
              </td>
              <td>
                <% if (p.status_verifikasi === 'Diverifikasi') { %>
                  <span class="status-badge status-diverifikasi">Diverifikasi</span>
                <% } else if (p.status_verifikasi === 'Ditolak') { %>
                  <span class="status-badge status-ditolak">Ditolak</span>
                <% } else { %>
                  <span class="status-badge status-menunggu">Menunggu</span>
                <% } %>
              </td>
              <td><%= new Date(p.tanggal_daftar).toLocaleDateString('id-ID') %></td>
              <td>
                <a href="/admin/detail/<%= p.id %>" class="btn-detail">
                  <i class="fas fa-eye me-1"></i>Lihat Detail
                </a>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<!-- jQuery (required for DataTables) -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<!-- DataTables JS -->
<script src="https://cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.7/js/dataTables.bootstrap5.min.js"></script>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<!-- Custom JavaScript -->
<script>
$(document).ready(function() {
  // Initialize DataTable
  const table = $('#monitoringTable').DataTable({
    "language": {
      "info": "Menampilkan _START_ - _END_ dari _TOTAL_ pendaftar",
      "infoEmpty": "Tidak ada data",
      "infoFiltered": "(difilter dari _MAX_ total pendaftar)",
      "paginate": {
        "previous": "Previous",
        "next": "Next"
      }
    },
    "pageLength": 10,
    "order": [[5, 'desc']] // Sort by tanggal daftar
  });

  // Custom search
  $('#searchTable').on('keyup', function() {
    table.search(this.value).draw();
  });

  // Filter button
  $('#btnFilter').on('click', function() {
    Swal.fire({
      title: 'Filter Data',
      html: `
        <select id="filterStatus" class="form-select mb-3">
          <option value="">Semua Status</option>
          <option value="Diverifikasi">Diverifikasi</option>
          <option value="Menunggu">Menunggu</option>
          <option value="Ditolak">Ditolak</option>
        </select>
      `,
      showCancelButton: true,
      confirmButtonText: 'Terapkan',
      cancelButtonText: 'Batal',
      confirmButtonColor: '#0047AB'
    }).then((result) => {
      if (result.isConfirmed) {
        const filterValue = document.getElementById('filterStatus').value;
        table.column(4).search(filterValue).draw();
      }
    });
  });
});

// Flash messages
<% if (typeof success_msg !== 'undefined' && success_msg.length > 0) { %>
  Swal.fire({
    icon: 'success',
    title: 'Berhasil!',
    text: '<%= success_msg %>',
    confirmButtonColor: '#0047AB'
  });
<% } %>

<% if (typeof error_msg !== 'undefined' && error_msg.length > 0) { %>
  Swal.fire({
    icon: 'error',
    title: 'Error!',
    text: '<%= error_msg %>',
    confirmButtonColor: '#0047AB'
  });
<% } %>
</script>

</body>
</html>
