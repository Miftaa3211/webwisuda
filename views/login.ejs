    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

<script>
// === SCRIPT PHOTO SLIDESHOW DENGAN ANIMASI ===
document.addEventListener('DOMContentLoaded', function() {
  // Array foto-foto wisuda (ganti dengan path foto Anda yang sebenarnya)
  const photos = [
    "/images/wisuda1.jpg",  // Ganti dengan foto wisuda pertama Anda
    "/images/wisuda2.jpg",  // Ganti dengan foto wisuda kedua Anda
    "/images/wisuda3.jpg",
    "/images/wisuda4.jpg",
    "/images/wisuda5.jpg",
    "/images/wisuda6.jpg",
    "/images/wisuda7.jpg",
    "/images/wisuda8.jpg",
    "/images/wisuda9.jpg",
    "/images/wisuda10.jpg"
  ];

  // Efek animasi yang akan dirotasi
  const animations = ['', 'slide-left', 'slide-right', 'zoom-in'];
  
  let currentIndex = 0;
  const slideshowWrapper = document.getElementById('slideshowWrapper');
  const dotsContainer = document.getElementById('dotsContainer');
  
  // Generate slide images
  photos.forEach((photo, index) => {
    const img = document.createElement('img');
    img.src = photo;
    img.className = 'slide-image';
    img.alt = `Wisuda ${index + 1}`;
    if (index === 0) img.classList.add('active');
    slideshowWrapper.appendChild(img);
  });

  // Generate dots
  photos.forEach((_, index) => {
    const dot = document.createElement('div');
    dot.className = 'dot';
    if (index === 0) dot.classList.add('active');
    dot.addEventListener('click', () => goToSlide(index));
    dotsContainer.appendChild(dot);
  });

  const slides = document.querySelectorAll('.slide-image');
  const dots = document.querySelectorAll('.dot');

  function goToSlide(index) {
    // Remove active class dari semua
    slides.forEach(slide => {
      slide.classList.remove('active', 'slide-left', 'slide-right', 'zoom-in');
    });
    dots.forEach(dot => dot.classList.remove('active'));
    
    // Tambahkan animasi random
    const randomAnimation = animations[Math.floor(Math.random() * animations.length)];
    
    // Aktifkan slide baru
    slides[index].classList.add('active');
    if (randomAnimation) {
      slides[index].classList.add(randomAnimation);
    }
    dots[index].classList.add('active');
    
    currentIndex = index;
  }

  function nextSlide() {
    const nextIndex = (currentIndex + 1) % photos.length;
    goToSlide(nextIndex);
  }

  // Auto slide setiap 5 detik
  setInterval(nextSlide, 5000);
});

// === LOGIKA LOGIN ===
const form = document.getElementById('loginForm');
const alertBox = document.getElementById('loginAlert');

form.addEventListener('submit', async e => {
  e.preventDefault();
  alertBox.className = 'alert d-none';
  const btn = form.querySelector('button');
  const originalContent = btn.innerHTML;
  btn.innerHTML = '<i class="fas fa-circle-notch fa-spin"></i> Memproses...';
  btn.disabled = true;

  const formData = new FormData(form);
  const data = new URLSearchParams(formData);

  try {
    const res = await fetch('/auth/login', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: data 
    });
    const result = await res.json();
    if (!result.success) throw new Error(result.message);
    window.location.href = result.redirect;
  } catch (error) {
    alertBox.className = 'alert alert-danger';
    alertBox.innerHTML = `<i class="fas fa-exclamation-triangle me-2"></i> ${error.message || 'Terjadi kesalahan.'}`;
    form.classList.add('shake');
    setTimeout(() => form.classList.remove('shake'), 500);
  } finally {
    btn.innerHTML = originalContent;
    btn.disabled = false;
  }
});

// === LOGIKA LUPA PASSWORD ===
document.getElementById('forgotForm').addEventListener('submit', async e => {
  e.preventDefault();
  const alert = document.getElementById('forgotAlert');
  alert.className = 'alert alert-info';
  alert.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Mengirim email...';
  const formData = new FormData(e.target);
  const data = new URLSearchParams(formData);
  try {
    const res = await fetch('/auth/forgot-password', {
      method: 'POST',
      headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
      body: data
    });
    const result = await res.json();
    if (result.success) {
        alert.className = 'alert alert-success';
        alert.innerHTML = `<i class="fas fa-check-circle me-2"></i> ${result.message}`;
    } else {
        alert.className = 'alert alert-danger';
        alert.innerHTML = `<i class="fas fa-exclamation-circle me-2"></i> ${result.message}`;
    }
  } catch (error) {
    alert.className = 'alert alert-danger';
    alert.innerHTML = `<i class="fas fa-times-circle"></i> Gagal terhubung ke server.`;
  }
});
</script>

</body>
